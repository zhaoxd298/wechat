/* pages/login/login.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;    /*沿cross axis居中对齐*/
    padding: 0 30rpx;       /*左右间距*/
}

.logo {
    width: 144rpx;
    height: 144rpx;
    margin: 40rpx 0;
}

.btn-login {
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
    border-radius: 10rpx;   /*圆角*/
}

.wechat {
    background-color: #42bd55;  /*背景色*/
    color: #fff;                /*前景色*/
    margin-bottom: 30rpx;
}

.douban {
    background-color: #fff;
    color: #42bd55;
    border: 2rpx solid #42bd55;
}

.agreement {
    color: #9d9d9d;
    font-size: 24rpx;
    display: flex;          /*字体显示在一行*/
    position: absolute;     /*放在界面最下面*/
    bottom: 50rpx;
}

.agreement .open {
    margin-left: 10rpx; /*和前面字间距*/
    color: #4bb65c;
}